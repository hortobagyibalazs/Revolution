<UserControl x:Class="Revolution.Scenes.GameUiControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Revolution.Scenes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer x:Name="CanvasViewer" DockPanel.Dock="Top" Panel.ZIndex="0"
            Grid.Row="0" HorizontalScrollBarVisibility="Hidden" 
            VerticalScrollBarVisibility="Hidden">
            <Canvas x:Name="MainCanvas"/>
        </ScrollViewer>

        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Image Source="/Assets/spr_gui_bar.png" Panel.ZIndex="1" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="30,0,30,0"/>            
        </Grid>
    </Grid>
</UserControl>
